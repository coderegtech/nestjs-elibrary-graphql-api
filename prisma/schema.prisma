// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Student {
  sid             Int       @id @unique
  student_name    String
  corporate_email String
  college_id      Int
  address         String
  date_add        DateTime  @default(now())
  books           Books[]   @relation("StudentToBook")
  colleges        Colleges? @relation(fields: [college_id], references: [id])
  Borrows         Borrow[]  @relation("StudentToBorrow")
}

model Books {
  bid            Int    @id @unique @default(autoincrement())
  book_name      String
  book_author    String
  book_isbn      String @unique
  year_published Int
  quantity       Int

  students Student[] @relation("StudentToBook")
  borrows  Borrow[]  @relation("BookToBorrow")
}

model Borrow {
  borrow_id   Int      @id @unique @default(autoincrement())
  student_id  Int      @unique
  coll_id     Int
  book_isbn   String   @unique
  time_borrow DateTime @default(now())
  time_return DateTime @default(now())
  fines       Int
  action      String

  student Student? @relation("StudentToBorrow", fields: [student_id], references: [sid])

  book Books? @relation("BookToBorrow", fields: [book_isbn], references: [book_isbn])

  colleges Colleges? @relation(fields: [coll_id], references: [id])
}

model Colleges {
  id           Int       @id @unique @default(autoincrement()) @db.Int
  college_name String
  Student      Student[]
  Borrow       Borrow[]
}
